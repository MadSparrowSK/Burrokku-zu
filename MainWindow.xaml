<Window x:Class="Interface_1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface_1._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Icon="/Icon/icon.png"
        MinHeight="500"
        MinWidth="800">
    <Border BorderBrush="Black"
            BorderThickness="0"
            CornerRadius="0"
            Background="Black">
        <Grid ShowGridLines="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--#region  Header-->
            
            <!--#region right_side-->
            <DockPanel Grid.Column="3"
                       Grid.Row="0"
                       Background="Black"
                       MouseLeftButtonDown="Mouse_Drag_Window">

                <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                    <Label Width="35"
                           MouseEnter="Mouse_Enter"
                           MouseLeave="Mouse_Leave"
                           Padding="11.5,15,5,5"
                           MouseLeftButtonDown="Roll_Up">
                        <Rectangle Height="1.3"
                                   Width="14"
                                   Fill="White"></Rectangle>
                    </Label>

                    <Label Foreground="White"
                           Width="35"
                           MouseEnter="Mouse_Enter"
                           MouseLeave="Mouse_Leave"
                           Padding="12,13,5,5"
                           MouseLeftButtonDown="Resize_Wondow">

                        <Canvas>
                            <Rectangle Stroke="White"
                                       Height="10"
                                       Width="10"
                                       Fill="Black"
                                       Panel.ZIndex="1"></Rectangle>

                            <Rectangle Stroke="White"
                                       Width="10"
                                       Height="10"
                                       Canvas.Top="-2"
                                       Canvas.Right="-12"></Rectangle>
                        </Canvas>

                    </Label>

                    <Label MouseEnter="Mouse_Enter"
                           MouseLeave="Mouse_Leave"
                           MouseLeftButtonDown="Close_Click" 
                           Foreground="White"
                           Content="X"
                           Name="lbl_Close"
                           Padding="15,9,5,5"
                           Width="35"/>

                </StackPanel>
            </DockPanel>
            <!--#endregion-->

            <!--#region center-->

            <DockPanel Background="Black"
                       Grid.Row="0"
                       Grid.Column="2"
                       MouseLeftButtonDown="Mouse_Drag_Window">

                <Label MouseLeftButtonDown="Change_Window"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Content="Change Theme"
                       FontFamily="/Font/#Clickuper"
                       Padding="0,7,0,0">
                    <Label.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="Orange" Offset="0.0"></GradientStop>
                            <GradientStop Color="Red" Offset="0.25"></GradientStop>
                            <GradientStop Color="Blue" Offset="0.75"></GradientStop>
                            <GradientStop Color="LightGray" Offset="0.99"></GradientStop>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
            </DockPanel>
   
            
            <!--#endregion-->
            
            <!--#region left_side-->
            <DockPanel Grid.Column="0"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Background="Black"
                       MouseLeftButtonDown="Mouse_Drag_Window">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    
                    <!--#region symbol-->
                    <Label Padding="20,10,44,0">
                        <Canvas>
                            <Polyline Stroke="Orange" Points="38,2 30,13"></Polyline>
                            <Polyline Points="42,4 48,8 42,11" Stroke="#D032FC"></Polyline>
                            <Polyline Points="25,4 19,8 25,11" Stroke="#D032FC"></Polyline>
                            <Polyline Points="17,1 8,8 17,14.25 50,14.25  59,8 50,1 17,1" Stroke="White"></Polyline>

                        </Canvas>
                    </Label>
                    <!--#endregion-->

                    <Label Content="Burrokku-Zu"
                           FontSize="18"
                           FontFamily="/Font/#Clickuper"
                           Foreground="White"
                           Padding="20,7,0,0"></Label>
                </StackPanel>
            </DockPanel>
            <!--#endregion-->
            
            <!--#endregion-->
            
           <!--#region  main field-->
            <Canvas Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Background="#808087">
                
            </Canvas>
            <!--#endregion-->

           <!--#region side bar-->

           <DockPanel Grid.Column="0"
                       Grid.Row="1"
                       VerticalAlignment="Top"
                       Background="Black">

                <StackPanel Orientation="Vertical">

                    <!--#region  ellipse-->
                    <Label Padding="20,10,0,10"
                           MouseEnter="SideBar_Mouse_Enter"
                           MouseLeave="SideBar_Mouse_Leave">
                        <Rectangle Width="70"
                                   Height="25"
                                   Stroke="White"
                                   RadiusX="13"
                                   RadiusY="20"></Rectangle>
                    </Label>
                    <!--#endregion-->
                    
                    <!--#region rectangle-->
                    <Label Padding="20,10,0,10"
                           Background="Black"
                           MouseEnter="SideBar_Mouse_Enter"
                           MouseLeave="SideBar_Mouse_Leave">

                        <Polygon Stroke="White" Points="8,1 8,30 60,30 60,1"></Polygon>
                        
                    </Label>
                    <!--#endregion-->

                    <!--#region parallelogram-->
                    <Label Padding="19,10,0,10"
                           Background="Black"
                           MouseEnter="SideBar_Mouse_Enter"
                           MouseLeave="SideBar_Mouse_Leave">

                        <Polygon Stroke="White" Points="8,1 0,30 60,30 68,1"></Polygon>
                       
                    </Label>
                    <!--#endregion-->
                    
                    <!--#region rhombus-->
                    <Label Padding="14,12,0,8"
                           Background="Black"
                           MouseEnter="SideBar_Mouse_Enter"
                           MouseLeave="SideBar_Mouse_Leave">

                        <Polygon Stroke="White" Points="0,8 40,20 80,8 40,-4"></Polygon>
                        
                    </Label>
                    <!--#endregion-->
                    
                    <!--#region rectangle with line-->
                    <Label Padding="9,12,0,44"
                           Background="Black"
                           MouseEnter="SideBar_Mouse_Enter"
                           MouseLeave="SideBar_Mouse_Leave">

                        <Canvas>
                            <Polyline Stroke="White" Points="18,1 18,30"></Polyline>
                            <Polyline Stroke="White" Points="70,1 70,30"></Polyline>
                            <Polygon Stroke="White" Points="8,1 8,30 80,30 80,1"></Polygon>
                        </Canvas>
                        
                    </Label>
                    <!--#endregion-->
                    
                    <!--#region cycle-->
                    <Label Padding="20,16,0,12"
                           Background="Black"
                           MouseEnter="SideBar_Mouse_Enter"
                           MouseLeave="SideBar_Mouse_Leave">

                        <Polygon Stroke="White" Points="1,8 7,20 60,20 67,8 60,-6 7,-6"></Polygon>
                        
                    </Label>
                    <!--#endregion-->
                </StackPanel>
                
            </DockPanel>
            
           <!--#endregion-->
        </Grid>
    </Border>
</Window>
